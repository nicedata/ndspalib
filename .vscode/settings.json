{
    "python.languageServer": "Default",
    "js/ts.implicitProjectConfig.checkJs": true,
    "javascript.validate.enable": true,
    "files.exclude": {
        "releases": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/venv**": true,
        "**/docs**": true,
        "**/ndspalib.js": true,
        "**/release": true
    },
    "emeraldwalk.runonsave": {
        "message": "*** All Start ***",
        "messageAfter": "*** All Complete ***",
        "commands": [
            {
                // Run whenever any file is saved
                "match": ".js",
                // "cmd": "browserify -p tinyify src/server/static/js/package.js -o src/server/static/js/bundle.js"
                "cmd": "esbuild src/server/static/js/main.js --bundle --outfile=release/ndspalib.js"
                // "cmd": "browserify src/server/static/js/package.js -o src/server/static/js/bundle.js"
            }
        ]
    }
}
